<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Gestion des Stocks{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-beta1/css/bootstrap.min.css">
</head>
<body>
{% include 'partial/header.html.twig' %}
{% for label, messages in app.flashes %}
    <div class="alert alert-{{ label }} flash-message">
        {% for message in messages %}
            {{ message }}
        {% endfor %}
    </div>
{% endfor %}
<div class="container mt-4">
    {% block body %}{% endblock %}
</div>

{% include 'partial/footer.html.twig' %}
</body>
<script>
    setTimeout(function() {
        let flashMessages = document.querySelectorAll('.flash-message');
        flashMessages.forEach(function(flashMessage) {
            flashMessage.style.transition = "opacity 1s";
            flashMessage.style.opacity = "0";
            setTimeout(function() {
                flashMessage.remove();
            }, 1000);
        });
    }, 5000);
</script>
<script>
    const searchInput = document.getElementById('search-input');
    const clearSearchButton = document.getElementById('clear-search');

    // Afficher le bouton "clear" quand du texte est saisi
    searchInput.addEventListener('input', function() {
        if (this.value.length > 0) {
            clearSearchButton.style.display = 'inline-block';
        } else {
            clearSearchButton.style.display = 'none';
        }
    });

    // Effacer le champ de recherche lorsqu'on clique sur la croix
    clearSearchButton.addEventListener('click', function() {
        searchInput.value = '';
        clearSearchButton.style.display = 'none';
        searchInput.focus(); // Réfocaliser sur l'input après avoir effacé
    });
</script>
<style>
    .modal-dialog-scrollable {
        max-height: 90vh;
        overflow-y: auto;
    }
    .modal-header {
        background-color: #f5f5f5;
        border-bottom: 1px solid #dee2e6;
    }

    .modal-footer {
        background-color: #f5f5f5;
        border-top: 1px solid #dee2e6;
    }

    .table th, .table td {
        vertical-align: middle;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-warning {
        background-color: #ffc107;
    }

    .badge-danger {
        background-color: #dc3545;
    }

    .btn-close {
        background: none;
        border: none;
    }

    .btn-close:hover {
        color: #dc3545;
        cursor: pointer;
    }

    .modal-body {
        padding: 20px;
    }

    .btn-warning {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #fff;
    }

    .btn-warning:hover {
        background-color: #e0a800;
        border-color: #d39e00;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
    }

    .btn-danger:hover {
        background-color: #c82333;
        border-color: #bd2130;
    }

    .icon-scroll {
        display: flex;
        overflow-x: auto;
        padding: 10px 0;
    }

    .icon-scroll button {
        margin-right: 10px;
    }
    .search-container {
        text-align: center;
        padding: 50px 0;
    }


    /* Conteneur de la barre de recherche */
    .search-input-container {
        position: relative;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .search-bar {
        width: 100%;
        padding: 10px 20px;
        border-radius: 25px;
        border: 2px solid #88cdff;
        background-color: #fff;
        font-size: 16px;
        transition: all 0.3s ease;
        color: #333;
    }

    /* Bouton pour effacer le texte (croix) */
    .clear-btn {
        position: absolute;
        right: 45px;
        background: none;
        border: none;
        font-size: 24px;
        cursor: pointer;
        color: #888;
        visibility: hidden;
    }

    .search-bar:not(:placeholder-shown) + .clear-btn {
        visibility: visible;
    }

    /* Bouton de recherche (loupe) */
    .search-btn {
        position: absolute;
        right: 10px;
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        color: #888;
    }

    .search-bar:focus {
        border-color: #88c0ff;
        box-shadow: 0 0 5px rgba(136, 233, 255, 0.5);
        outline: none;
    }



</style>
</html>
