{% extends 'base.html.twig' %}

{% block title %}Modifier le type de produit{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Modifier le type de produit</h1>

        {{ form_start(form) }}

        <div class="form-group mt-3">
            {{ form_label(form.name) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="form-group mt-3">
            {{ form_label(form.brand) }}
            {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.brand) }}
        </div>

        <div class="form-group mt-3">
            {{ form_label(form.category) }}
            {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.category) }}
        </div>


        <button type="submit" class="btn btn-success mt-3">Modifier le type de produit</button>
        <a href="{{ path('app_product_type_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste des types de produits</a>

        {{ form_end(form) }}

    </div>
{% endblock %}
