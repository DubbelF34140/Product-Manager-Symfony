{% extends 'base.html.twig' %}

{% block title %}Nouveau Type de Produit{% endblock %}

{% block body %}
    <h1>Ajouter un nouveau Type de Produit</h1>

    {{ form_start(form) }}
    <div class="form-group">
        {{ form_label(form.name) }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        {{ form_label(form.brand) }}
        {{ form_widget(form.brand, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.brand) }}
    </div>

    <div class="form-group">
        {{ form_label(form.category) }}
        {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.category) }}
    </div>

    <button class="btn btn-success mt-3">Enregistrer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_product_type_index') }}" class="btn btn-secondary mt-3">Retour Ã  la liste des Types de Produit</a>
{% endblock %}
